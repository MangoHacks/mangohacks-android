<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_help" tools:context="com.mangohacks.android.mangohacks.HelpActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider_dark"
        android:showDividers="middle">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_who"
            android:background="@android:color/transparent"
            android:hint="Who are you?"
            android:textSize="16sp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:inputType="text|textAutoComplete|textAutoCorrect" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_where"
            android:background="@android:color/transparent"
            android:hint="Where are you?"
            android:textSize="16sp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:inputType="text|textAutoComplete|textAutoCorrect" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_what"
            android:background="@android:color/transparent"
            android:hint="What help do you need?"
            android:textSize="16sp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:minHeight="56dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:lineSpacingExtra="4.0dp"
            android:inputType="text|textMultiLine|textAutoComplete|textAutoCorrect" />
    </LinearLayout>
</RelativeLayout>
